<!-- HEAD -->
<%- include('../partials/head.ejs', {title: 'Formulario de Edicion' }) %>

  <link rel="stylesheet" href="../css/login-register.css" />
  <link rel="stylesheet" type="text/css" href="../css/productCreate.css" />

  <body>
    <!-- HEADER -->
    <%- include('../partials/header.ejs') %>

    <div class="container products-wrapper">
      <div class="row">
        <div class="col-12">
          <h2 class="products-title">Estás editando: <i><%= usuario.full_Name %></i></h2>
        </div>
      </div>
      <div class="col-12">
        <div class="text-danger">
          <ul></ul>
        </div>
        <form action="/userEdit/<%= usuario.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
          <div class="row product-detail">
            <div class="col-12 col-md-6">
              <label for="name" class="form-label">Nombre Completo:</label>
              <input type="text" id="full_Name" name="full_Name" placeholder="Ej: Miguel Nieva" class="form-input" value="<%= usuario.full_Name %>">
            </div>
            <div class="col-12 col-md-6">
              <label for="price" class="form-label">Precio del producto:</label>
              <input type="text" id="price" name="price" placeholder="Ej: 5678" class="form-input" value="<%= pToEdit.price %>">
            </div>
            <div class="col-12 col-md-6">
              <label for="discount" class="form-label">Descuento:</label>
              <input type="text" id="discount" name="discount" placeholder="Ej: 15" class="form-input" value="<%= pToEdit.discount %>">
            </div>
            <div class="col-12 col-md-6">
              <label for="category" class="form-label">Categoría:</label>
              <select name="category" id="category" class="form-input">
                <option value="">Elegí</option>
                <% if (pToEdit.category == "visited") { %>
                  <option value="in-sale">En oferta</option>
                  <option value="visited" selected>Últimos agregados</option>
                <% } else { %>
                <option value="in-sale" selected>En oferta</option>
                <option value="visited" >Últimos agregados</option>
                <% } %>
              </select>
            </div>
            <div class="col-12">
              <label for="description" class="form-label">Descripción:</label>
              <textarea name="description" id="description" class="form-input"><%= pToEdit.description %></textarea>
            </div>
            <div class="col-12">
              <div class="form-group">
                <label for="image" class="form-label">Imagen de producto:</label>
                <input type="file" name="productImg" class="form-control">
              </div>
            </div>
            <div class="col-12">
              <button type="submit" class="buy-now-button">Guardar producto</button>
            </div>
          </div>
        </form>
      </div>
  
    </div>

      <!-- FOOTER -->
      <!--<%- include('../partials/footer.ejs') %>-->

      <script type="text/javascript" src="../../public/js/validProd.js"></script>

  </body>

  </html>